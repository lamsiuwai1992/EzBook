<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycleBookList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/booklistCard"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="214dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ViewPagesImages"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="No Book Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bookListing"
                    android:textStyle="bold"
                    android:layout_weight="4.43" />

                <Switch
                    android:id="@+id/bookStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_margin="10dp"
                    android:text="$ -"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bookListing" />

                <TextView
                    android:id="@+id/bookTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:maxLines="1"
                    android:layout_margin="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bookListing" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="No Description"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bookListing" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>