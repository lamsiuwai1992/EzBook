<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <!--<ProgressBar-->
    <!--android:id="@+id/show_chat_progressBar"-->
    <!--style="?android:attr/progressBarStyle"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_margin="0dp"
            android:src="@mipmap/account_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:text="Username"
                android:textColor="@color/input_register_hint"
                android:layout_weight="3.68" />

            <Button
                android:id="@+id/btn_logout"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:text="Logout" />
        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/contactlist_no_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="@string/no_contact"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_chat_recyclerView">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
